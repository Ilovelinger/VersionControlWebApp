@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        /*background-image: url('../../Image/football1.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;*/
        background-color: darkseagreen;
    }
    p {
        font-family: "Times New Roman";
        font-size: 20px;
    }
</style>

<div class="text-center">
    <h1>Welcome!</h1>
    <p class="lead">a web application for entering sports data version 1.0</p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Add a match result</h2>
        <p>
            Add a match result for a match that has ended.
        </p>
        <p><a class="btn btn-default" asp-controller="Match" asp-action="Index">Go &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>View existing matches</h2>
        <p>View existing match results.</p>
        <p><a class="btn btn-default" asp-controller="Match" asp-action="MatchList">Go &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Upload a new upcoming match</h2>
        <p></p>
        <p><a class="btn btn-default" asp-controller="Match" asp-action="AddNewMatch">Go &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>View new upcoming matches</h2>
        <p>Go view new upcoming matches, player can register in a new match.</p>
        <p><a class="btn btn-default" asp-controller="Match" asp-action="NewMatchList">Go &raquo;</a></p>
    </div>
</div>
